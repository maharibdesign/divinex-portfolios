---
import NavBar from '../components/NavBar.astro';
import '../styles/global.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Storeka Mini-App" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
		<title>{title}</title>

    <!-- !!! NEW: Comprehensive Favicon and App Icon Setup !!! -->
    <!-- Assumes your icon is named 'favicon.png' in the public/ folder -->
    <link rel="icon" type="image/png" href="/favicon.png" sizes="32x32">
    <link rel="icon" type="image/png" href="/favicon.png" sizes="16x16">
    <!-- This is the icon for 'Add to Home Screen' on Apple devices -->
    <link rel="apple-touch-icon" href="/favicon.png" sizes="180x180">
    <!-- A general icon for other uses -->
    <link rel="shortcut icon" href="/favicon.png">
    
    <script src="https://telegram.org/js/telegram-web-app.js"></script>
	</head>
	<body>
    <NavBar />
		<main class="container"> <slot /> </main>
    <script is:inline>
      try{const tg=window.Telegram.WebApp;tg.ready();const applyTheme=()=>{document.documentElement.className=tg.colorScheme};tg.onEvent("themeChanged",applyTheme);applyTheme();tg.BackButton.show();tg.BackButton.onClick(()=>{window.history.back()})}catch(e){console.warn("Telegram script failed."),document.documentElement.className="light"}
    </script>
	</body>
</html>